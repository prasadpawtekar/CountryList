<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="@dimen/x2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x2">
        <TextView
            tools:text="AU"

            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_country_code"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="Australia, OC"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/tv_country_name_region"
            android:layout_marginEnd="@dimen/x2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_country_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="Canberra"
            app:layout_constraintTop_toBottomOf="@id/tv_country_name_region"
            android:layout_marginTop="@dimen/x1"
            android:id="@+id/tv_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>